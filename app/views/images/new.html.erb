<h1>Add a new Image</h1>

<%= form_tag '/images', method: :post do %>
  <div>
    <%= label_tag :image_url %>
    <%= text_field_tag :image_url %>
  </div>

  <div>
    <%= label_tag :product_id %>
    <%= text_field_tag :product_id %>
  </div>

  <%= submit_tag "Create Image", class: "btn btn-default" %>

<% end %>