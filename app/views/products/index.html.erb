<% @products.each do |product| %>
  
  <div class="row">
    <div class="col-md-4">
      <a href="/products/<%= product.id %>"><img src="<%= product.image %>" class="img-thumbnail"></a>
    </div>

    <div class="col-md-8" product_details>
      <div class="row">
        <div class="col-md-12">
        <!-- <h2><a href="/products/<%= product.id %>"><%= product.name %></a></h2> -->
        <h2><%= link_to product.name, "/products/#{product.id}" %></h2>
        </div>
      </div> 

      <div class="row">
        <div class="col-md-2">
          <button class="btn btn-default" type="submit">Buy Now!</button>
        </div>
        <div class="col-md-10">
          <%= product.price %>
        </div>
      </div> 
      <div class="row">
        <div class="col-md-12">
          <%= product.description %>
        </div>
      </div> 
    </div> 
  </div>

<% end %>