<table>
  <tr>
    <td class="col-md-4">
      <img src="<%= @product.image %>" class="img-thumbnail">
    </td>

    <td class="col-md-8">
      <div class="row" class="product_details">
        <%= @product.name %>
      </div> 
      <div class="row">
        <%= @product.price %>
        <button class="btn btn-default" type="submit">Buy Now!</button>
      </div> 
      <div class="row">
        <%= @product.description %>
      </div> 
    </td> 
  </tr>
</table>