<div class="col-md-12">
  <div class="col-sm-6 col-md-4">
      
      <!-- Carousel Div Start -->
      <div id="image-carousel" class="carousel slide" data-ride="carousel">

      <% @product.images.each_with_index do |image, index| %>
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#image-carousel" data-slide-to="<%= index %>" class="active">
                <!-- Need to seperate active state on images -->
              </li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <div class="item active"> 
                <img src="<%= image.image_url %>" class="img-responsive">
                <!-- <div class="carousel-caption">
                  ...
                </div> -->
              </div>
            </div>
      <% end %>

        <!-- Carousel Controls -->
        <a class="left carousel-control" href="#image-carousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#image-carousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

  </div>
  <div class="col-sm-6 col-md-8">
      <div class="caption">
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <h3>
              <span id="sale_message" class="label label-info"><%= @product.sale_message %></span>
            </h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-xs-8 silver-border">
            <h3><%= @product.name %></h3>
            <h5>By: <%= @product.supplier_name %></h5>
            <span id="<%= @product.stock_class %>"><%= @product.in_stock? %></span>
            <br>
            <br>
            <p id="description"><%= @product.description %></p>
          </div>
          <div class="col-md-4 col-xs-4">
            <table id="price_table">
              <tr>
                <td><strong>Price: </strong></td>
                <td>$<%= @product.cost %></td>
              </tr>
              <tr>
                <td><strong>Tax: </strong></td>
                <td>$<%= @product.sale_tax %></td>
              </tr>
              <tr>
                <td><strong>Total: </strong></td>
                <td>$<%= @product.total_cost %></td>
              </tr>
            </table>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-12">
            <a href="#" class="btn btn-success <%= @product.buy_out_of_stock_class %>"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a></div>
        </div>
    </div>
  </div>
</div> 