<div class="col-md-12">
  <div class="col-sm-6 col-md-4">
      <img src="<%= @product.image %>" class="img-responsive">
  </div>
  <div class="col-sm-6 col-md-8">
      <div class="caption">
        <div class="row">
          <div class="col-md-8 col-xs-8">
            <h3><%= @product.name %></h3>
          </div>
          <div class="col-md-4 col-xs-4 price">
            <h3>
            <label><%= @product.price %></label></h3>
          </div>
        </div>
        <p><%= @product.description %></p>
        <div class="row">
          <div class="col-md-12">
            <a href="#" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a></div>
        </div>
    </div>
  </div>
</div> 