<h1>Add a new product</h1>

<%= form_tag '/products', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>

  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>

  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>

  <div>
    <%= label_tag :supplier %>
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>

  <div>
    <%= label_tag :inventory %>
    <%= text_field_tag :inventory, @product.inventory %>
  </div>

  <div>
    <%= label_tag :description %>
    <%= text_area_tag :description, @product.description %>
  </div>

  <%= submit_tag "Create Product", class: "btn btn-default" %>

<% end %>