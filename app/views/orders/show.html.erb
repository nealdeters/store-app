<div class="row">
  <div class="col-md-12">
    <div class="col-md-6">
      <h1>Order: #<%= @order.id %></h1>
      <h4>User: <%= @order.user.email %></h4>
      <br>
      <table id="price_table">
        <tr>
          <td><strong>Order ID: </strong></td>
          <td><%= @order.id %></td>
        </tr>
        <tr>
          <td><strong>Subtotal: </strong></td>
          <td><%=number_to_currency( @order.subtotal )%></td>
        </tr>
        <tr>
          <td><strong>Tax: </strong></td>
          <td><%=number_to_currency( @order.tax )%></td>
        </tr>
        <tr>
          <td><strong>Total: </strong></td>
          <td><%=number_to_currency( @order.total )%></td>
        </tr>
      </table>

      <% @order.carted_products.each do |carted_product| %>
        <h4><%= carted_product.product.name %> - Quantity <%= carted_product.quantity %></h4>
      <% end %>
    </div>

    <div class="col-md-6">
      <br>
      
    </div>
  </div>
</div>