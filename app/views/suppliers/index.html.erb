<table class="inventory-table">
  <tr>
    <th>Supplier ID</th>
    <th>Supplier Name</th>
    <th>Supplier Email</th>
    <th>Supplier Phone</th>
  </tr>
<% @suppliers.each do |supplier| %>
  <tr>
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <td><%= supplier.id %></td>
          <td><%= supplier.name %></td>
          <td><%= supplier.email %></td>
          <td><%= supplier.phone %></td>
          <td><a href="/suppliers/<%= supplier.id %>/edit" class="btn btn-default">Edit</a></td>
          <td><a data-confirm="Are you sure?" data-method="delete" href="/suppliers/<%= supplier.id %>" class="btn btn-danger">Delete</a></td>
        </div>  
      </div> 
    </div>
  </tr>

<% end %>
</table>

<a class="btn btn-default" href="/suppliers/new">Create New Supplier</a>